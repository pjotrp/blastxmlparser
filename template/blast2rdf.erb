  :id          "<%= hit.hit_id %>";
  :len         <%= hit.len %>;
  :identity    <%= hsp.identity %>;
  :align_len   <%= hsp.align_len %>;
  :bitscore    <%= hsp.bit_score %>;
  :qseq        "<%= hsp.qseq %>";
  :midline     "<%= hsp.midline %>", 
  :hseq        "<%= hsp.hseq %>";
  :evalue      <%= hsp.evalue %> .

